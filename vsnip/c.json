{
  "main": {
    "prefix": "main",
    "body": ["int main(int argc, char** argv) {", "\t${0}", "}"]
  },

  "pragma-clang-diagnostic-ignored": {
    "prefix": "pragma-clang-diagnostic-ignored",
    "body": [
      "#ifdef __clang__",
      "#pragma clang diagnostic push",
      "#pragma clang diagnostic ignored \"${1}\"",
      "#endif",
      "${0}",
      "#ifdef __clang__",
      "#pragma clang diagnostic pop",
      "#endif"
    ]
  },

  "/usr/bin/env true": {
    "prefix": "SHEBANG",
    "body": [
      "////usr/bin/env true << EOF",
      "/*",
      "EOF",
      "set -eu",
      "cd \"\\$(dirname \"\\$0\")\"",
      "b=\\$(basename \"\\${0%.*}\")",
      ": \"\\${CC:=gcc}\"",
      ": \"\\${CFLAGS=-Wall -Wextra -Wpedantic}\"",
      ": \"\\${CPPFLAGS=}\"",
      ": \"\\${LDFLAGS=}\"",
      ": \"\\${LDLIBS=}\"",
      "set -x",
      "\\$CC \\$CFLAGS \\$CPPFLAGS -c -o \"\\$b.o\" \"\\$0\"",
      "\\$CC -o \"\\$b.out\" \"\\$b.o\" \\$LDFLAGS \\$LDLIBS",
      "\"./\\$b.out\"",
      "exit",
      " */",
      "\n"
    ]
  },

  "MPI_Init(); MPI_Finalize();": {
    "prefix": "MPI_Init(",
    "body": ["MPI_Init(&${1:argc}, &${2:argv});", "${0}", "MPI_Finalize();"]
  },
  "MPI_Abort();": {
    "prefix": "MPI_Abort(",
    "body": "MPI_Abort(${1:MPI_COMM_WORLD}, ${2:1});"
  },
  "MPI_Comm_rank();": {
    "prefix": "MPI_Comm_rank(",
    "body": ["int ${1:rank};", "MPI_Comm_rank(${2:MPI_COMM_WORLD}, &$1);"]
  },
  "MPI_Comm_size();": {
    "prefix": "MPI_Comm_size(",
    "body": ["int ${1:size};", "MPI_Comm_size(${2:MPI_COMM_WORLD}, &$1);"]
  }
}
